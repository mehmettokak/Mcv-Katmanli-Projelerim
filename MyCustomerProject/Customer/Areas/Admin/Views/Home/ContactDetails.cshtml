@model Customer.Models.Classes.Contact.ContactModel
@{
    ViewBag.Title = "ContactDetails";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    TempData["pageName"] = "Home";
    TempData["page"] = "Contact";
    TempData["page1"] = "ContactDetails";
    
}

@Html.Partial("Partials/_pageBar")
<div class="profile">
    <div class="tabbable-line tabbable-full-width">
        <ul class="nav nav-tabs">
            <li class="active">
                <a href="#tab_1_1" data-toggle="tab"> Overview </a>
            </li>
            <li>
                <a href="#tab_1_3" data-toggle="tab"> Account </a>
            </li>

        </ul>
        <div class="tab-content">

            <div class="tab-pane active" id="tab_1_1">

                <div class="row">
                    <div class="col-md-3">
                        <ul class="list-unstyled profile-nav">
                            <li>
                                <img style="height:150px;height:200px;" src="@Model.LogoImage"  />

                            </li>
                         
                        </ul>
                    </div>
                    <div class="col-md-9">
                        <div class="row">
                            <div class="col-md-8 profile-info">
                                <h1 class="font-green sbold uppercase">@Model.MapTitle</h1>
                                <p>
                                    @Model.Adress
                                </p>
                                <p>
                                    <a href="javascript:;"> @Model.MailAdress </a>
                                </p>
                               
                                <ul class="list-inline">

                                    <li>
                                        <i class="fa fa-briefcase"></i> Tlefon 1 : @Model.Telephone1
                                    </li>
                                    <li>
                                        <i class="fa fa-briefcase"></i> Tlefon 2 : @Model.Telephone2
                                    </li>
                                    <li>
                                        <i class="fa fa-briefcase"></i> Tlefon 3 : @Model.Telephone3
                                    </li>

                                </ul>
                            </div>
                            <!--end col-md-8-->
                            <div class="col-md-4">
                                <div class="portlet sale-summary">
                                    <div class="portlet-title">
                                        <div class="caption font-red sbold"> Map İmage </div>
                                        
                                    </div>
                                    <div class="portlet-body">
                                        <ul class="list-unstyled">
                                            <li>
                                             @Model.MapImage
                                               
                                            </li>
                                           
                                        </ul>
                                    </div>
                                </div>
                            </div>
                            <!--end col-md-4-->
                        </div>
                        <!--end row-->
                       
                    </div>
                </div>
            </div>

            <div class="tab-pane" id="tab_1_3">
                <div class="row profile-account">
@using (Html.BeginForm("SetContactDetails", "Home", FormMethod.Post, new { enctype = "multipart/form-data", autocomplete = "off" }))
{
                    <div class="col-md-3">
                        <ul class="ver-inline-menu tabbable margin-bottom-10">
                            <li class="active">
                                <a data-toggle="tab" href="#tab_1-1">
                                    <i class="fa fa-cog"></i> Contact Info
                                </a>
                                <span class="after"> </span>
                            </li>
                        </ul>
                        <div class="form-group">
                            <div class="fileinput fileinput-new" data-provides="fileinput">
                                <div class="fileinput-new thumbnail" style="width: 200px; height: 150px;">
                                    <img src="@Model.LogoImage"  alt="@Model.LogoImage" />
                                    @Html.HiddenFor(model => model.LogoImage)
                                </div>
                                <div class="fileinput-preview fileinput-exists thumbnail" style="max-width: 200px; max-height: 150px;"> </div>
                                <div>
                                    <span class="btn default btn-file">
                                        <span class="fileinput-new"> Select image </span>
                                        <span class="fileinput-exists"> Change </span>
                                        @Html.TextBoxFor(model => Model.LogoImage, new { @type = "file" })
                                    </span>
                                    <a href="javascript:;" class="btn default fileinput-exists" data-dismiss="fileinput"> Remove </a>
                                </div>
                            </div>

                        </div>

                    </div>
               
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "Aşağıdaki sorunlar oluştu!")
                        @Html.HiddenFor(model => Model.Id)
                        <div class="col-md-9">
                            <div class="tab-content">
                                <div id="tab_1-1" class="tab-pane active">
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.MapTitle)
                                        @Html.TextBoxFor(model => model.MapTitle, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.MapTitle)
                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.MapImage)
                                        @Html.TextAreaFor(model => model.MapImage, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.MapImage)
                                    </div>
                                   
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.MailAdress)
                                            @Html.TextAreaFor(model => model.MailAdress, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.MailAdress)
                                        </div>
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.Adress)
                                            @Html.TextAreaFor(model => model.Adress, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.Adress)
                                        </div>
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.Telephone1)
                                            @Html.TextBoxFor(model => model.Telephone1, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.Telephone1)
                                        </div>
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.Telephone2)
                                            @Html.TextBoxFor(model => model.Telephone2, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.Telephone2)
                                        </div>
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.Telephone3)
                                            @Html.TextBoxFor(model => model.Telephone3, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.Telephone3)
                                        </div>
                                    
                                        <div class="margiv-top-10">
                                            <button type="submit" class="btn green"> Kaydet</button>
                                            <a href="javascript:;" class="btn default"> Vazgeç </a>
                                        </div>
                                   
                                </div>
                                <div id="tab_2-2" class="tab-pane">
                                  
                                  
                                    <div class="form-group">
                                        <div class="fileinput fileinput-new" data-provides="fileinput">
                                            <div class="fileinput-new thumbnail" style="width: 200px; height: 150px;">
                                                <img src="@Model.MapImage" alt="@Model.MapTitle" />
                                                @Html.HiddenFor(model => model.MapImage)
                                            </div>
                                            <div class="fileinput-preview fileinput-exists thumbnail" style="max-width: 200px; max-height: 150px;"> </div>
                                            <div>
                                                <span class="btn default btn-file">
                                                    <span class="fileinput-new"> Select image </span>
                                                    <span class="fileinput-exists"> Change </span>
                                                    @Html.TextBoxFor(model => Model.MapImage, new { @type = "file" })
                                                </span>
                                                <a href="javascript:;" class="btn default fileinput-exists" data-dismiss="fileinput"> Remove </a>
                                            </div>
                                        </div>

                                    </div>
                                    <div class="margin-top-10">
                                        <button type="submit" class="btn green"> Kaydet </button>
                                        <a href="javascript:;" class="btn default"> Vazgeç</a>
                                    </div>

                                </div>

                            </div>
                        </div>
}

                    <!--end col-md-9-->
                </div>
            </div>
                   
        </div>
    </div>
</div>

