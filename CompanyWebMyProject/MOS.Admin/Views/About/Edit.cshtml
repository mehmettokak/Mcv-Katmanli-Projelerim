@model CompanyWeb.Admin.Models.AboutViewModel
@using CompanyWeb.Admin.Resources.About
@{
    ViewBag.Title = AboutResource.About;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Edit", "About", FormMethod.Post, new { @class = "avatar-form", autocomplete = "off" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>@AboutResource.EditAbout</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-2" for="Title">@AboutResource.Title</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2" for="Description">@AboutResource.Description</label>
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
            </div>
        </div>
    
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                @Html.ActionLink(AboutResource.BackTo, "Index", null, new { @class = "btn btn btn-primary" })
                <input type="submit" value="@AboutResource.Save" class="btn btn-success" />
            </div>
        </div>
    </div>
}

@Scripts.Render("~/Content/ckeditor/ckeditor.js")



<script type="text/javascript">
   


        var editor = CKEDITOR.instances['Description'];
        if (editor) { editor.destroy(true); }
        CKEDITOR.replace('Description', {
            enterMode: CKEDITOR.ENTER_BR,
        });

  

</script>