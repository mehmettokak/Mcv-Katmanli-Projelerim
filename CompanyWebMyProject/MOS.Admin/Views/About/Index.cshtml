@model CompanyWeb.Admin.Models.AboutViewModel
@using CompanyWeb.Admin.Resources.About
@{
    ViewBag.Title = AboutResource.About;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <h4>@AboutResource.Detail</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @AboutResource.Title
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt>
            @AboutResource.Description
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>
  </dl>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            @Html.ActionLink(AboutResource.Edit, "Edit", new { Id = Model.Id }, new { @class = "btn btn-warning" })
        </div>
    </div>
</div>
