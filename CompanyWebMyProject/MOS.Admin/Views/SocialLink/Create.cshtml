@model CompanyWeb.Entity.Model.SocialLink
@using CompanyWeb.Admin.Resources.SocialLink
@{
    ViewBag.Title = SocialLinkResource.CreateSocialLink;
}

@using (Html.BeginForm("Create", "SocialLink", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>@SocialLinkResource.CreateSocialLink</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-2" for="Name">@SocialLinkResource.Name</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="IconUrl">@SocialLinkResource.IconUrl</label>
            <div class="col-md-10">
                <input type="file" class="form-control" id="IconURL" name="IconURL">
                @Html.ValidationMessageFor(model => model.IconURL, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="LinkUrl">@SocialLinkResource.LinkUrl</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.LinkURL, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.LinkURL, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="IsActive">@SocialLinkResource.IsActive</label>
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.IsActive, new { htmlAttributes = new { @class = "col-md-1" } })
                    @Html.ValidationMessageFor(model => model.IsActive, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                @Html.ActionLink(SocialLinkResource.BackToList, "Index", null, new { @class = "btn btn btn-primary" })
                <input type="submit" value="@SocialLinkResource.Save" class="btn btn-success" />
            </div>
        </div>
    </div>
}