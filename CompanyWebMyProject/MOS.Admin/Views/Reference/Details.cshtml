@model CompanyWeb.Admin.Models.ReferenceViewModel
@using CompanyWeb.Admin.Resources.Reference
@{
    ViewBag.Title = ReferenceResource.Detail;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <h4>@ReferenceResource.Detail</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @ReferenceResource.LogoName
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LogoName)
        </dd>
        <dt>
            @ReferenceResource.ImageUrl
        </dt>
        <dd>
            @{
                if (!string.IsNullOrEmpty(Model.ImageURL))
                {
                    <text>
                        <img src="@Model.ImageURL" alt="" style="max-height: 300px" />
                    </text>
                }
            }
        </dd>

      
        <dt>
            @ReferenceResource.Testimonial
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Testimonial)
        </dd>
        <dt>
            @ReferenceResource.WebUrl
        </dt>

        <dd>
            @Html.DisplayFor(model => model.WebURL)
        </dd>
        <dt>
            @ReferenceResource.IsTestimonial
        </dt>

        <dd>
            @Html.DisplayFor(model => model.IsTestimonial)
        </dd>
        <dt>
            @ReferenceResource.IsActive
        </dt>

        <dd>
            @Html.DisplayFor(model => model.IsActive)
        </dd>

    </dl>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            @Html.ActionLink(ReferenceResource.BackToList, "Index", null, new { @class = "btn btn btn-primary" })
            @Html.ActionLink(ReferenceResource.Edit, "Edit", new { Id = Model.Id }, new { @class = "btn btn-warning" })
        </div>
    </div>
</div>

