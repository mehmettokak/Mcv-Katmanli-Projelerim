@model CompanyWeb.Entity.Model.User
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <!-- Meta, title, CSS, favicons, etc. -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>CompanyWeb | Yönetim Paneli</title>
    <!-- Bootstrap -->
    <link href="@Url.Content("~/Content/vendors/bootstrap/dist/css/bootstrap.min.css")" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="@Url.Content("~/Content/vendors/font-awesome/css/font-awesome.min.css")" rel="stylesheet">
    <!-- NProgress -->
    <link href="@Url.Content("~/Content/vendors/nprogress/nprogress.css")" rel="stylesheet">
    <!-- Animate.css -->
    <link href="@Url.Content("~/Content/animate.min.css")" rel="stylesheet">
    <!-- Custom Theme Style -->
    <link href="@Url.Content("~/Content/build/css/custom.min.css")" rel="stylesheet">
</head>
<body class="login">
    <div>
        <a class="hiddenanchor" id="signup"></a>
        <a class="hiddenanchor" id="signin"></a>
        <div class="login_wrapper">
            <div class="animate form login_form">
                <section class="login_content">
                    @using (Html.BeginForm("Login", "Home", new { returnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { autocomplete = "off" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "Aşağıdaki sorunlar oluştu!")
                        <h1>Yönetim Paneli</h1>
                        <div>
                            @Html.TextBoxFor(x => x.Email, new { @class = "form-control", placeholder = "mail@domain.com", required = "" })
                        </div>
                        <div>
                            @Html.PasswordFor(x => x.Password, new { @class = "form-control", placeholder = "parola", required = "" })
                        </div>
                        <div>
                            <input type="submit" class="btn btn-default submit pull-right" value="Giriş Yap" />
                        </div>
                        <div class="clearfix"></div>
                        <div class="separator">
                            <div>
                                <h1><i class="fa fa-paw"></i> CompanyWeb</h1>
                                <p>©2016 All Rights Reserved. Mehmet TOKAK</p>
                            </div>
                        </div>
                    }
                </section>
            </div>

        </div>
    </div>


</body>
</html>