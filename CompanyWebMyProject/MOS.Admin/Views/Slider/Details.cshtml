@model CompanyWeb.Admin.Models.SliderViewModel
@using CompanyWeb.Admin.Resources.Slider
@{
    ViewBag.Title = SliderResource.Detail;
}

<div>
    <h4>@SliderResource.Detail</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @SliderResource.Image
        </dt>
        <dd>
            @{
                if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <text>
                        <img src="@Model.ImageUrl" alt="" style="max-height: 300px"/>
                    </text>
                }
            }
        </dd>

        <dt>
            @SliderResource.Title
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>

        <dt>
            @SliderResource.IsActive
        </dt>

        <dd>
            @Html.DisplayFor(model => model.IsActive)
        </dd>

    </dl>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            @Html.ActionLink(SliderResource.BackToList, "Index", null, new { @class = "btn btn btn-primary" })
            @Html.ActionLink(SliderResource.Edit, "Edit", new { Id = Model.Id }, new { @class = "btn btn-warning" })
        </div>
    </div>
</div>
