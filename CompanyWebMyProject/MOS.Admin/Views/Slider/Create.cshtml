@model CompanyWeb.Admin.Models.SliderViewModel
@using CompanyWeb.Admin.Resources.Slider
@{
    ViewBag.Title = SliderResource.CreateSlider;
}
@section styles{
    <link href="@Url.Content("~/Content/vendors/cropper/dist/cropper.min.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/vendors/cropper/dist/crop_avatar.css")" rel="stylesheet" />
    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
}
@using (Html.BeginForm("Create", "Slider", FormMethod.Post, new { @class = "avatar-form", enctype = "multipart/form-data" })) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>@SliderResource.CreateSlider</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-2" for="Title">@SliderResource.Title</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="ImageUrl">@SliderResource.Image</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.ImageUrl, new { htmlAttributes = new { @class = "form-control" ,type="file"} })
                @Html.ValidationMessageFor(model => model.ImageUrl, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2" for="RowNumber">@SliderResource.RowNumber</label>
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.RowNumber, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.RowNumber, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2" for="IsActive">@SliderResource.IsActive</label>
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.IsActive, new { htmlAttributes = new { @class = "col-md-1" } })
                    @Html.ValidationMessageFor(model => model.IsActive, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                @Html.ActionLink(SliderResource.BackToList, "Index", null, new { @class = "btn btn-primary" })
                <input type="submit" value="@SliderResource.Save" class="btn btn-success" />
            </div>
        </div>
    </div>
}
